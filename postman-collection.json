    {
      "name": "Baker Registration",
      "item": [
        {
          "name": "Step 1 - Send OTP",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Jane Baker\",\n  \"email\": \"jane@example.com\",\n  \"password\": \"password123\",\n  \"phone\": \"9876543299\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/baker/signup/step1",
              "host": ["{{base_url}}"],
              "path": ["baker", "signup", "step1"]
            }
          }
        },
        {
          "name": "Verify OTP",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"jane@example.com\",\n  \"otp\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/baker/verify-otp",
              "host": ["{{base_url}}"],
              "path": ["baker", "verify-otp"]
            }
          }
        },
        {
          "name": "Step 2 - Complete Profile",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{baker_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "bakery_name", "value": "Sweet Treats Bakery", "type": "text" },
                { "key": "city", "value": "Mumbai", "type": "text" },
                { "key": "state", "value": "Maharashtra", "type": "text" },
                { "key": "pincode", "value": "400001", "type": "text" },
                { "key": "id_proof_type", "value": "aadhar", "type": "text" },
                { "key": "id_proof_number", "value": "1234-5678-9012", "type": "text" },
                { "key": "fssai_number", "value": "1234567890", "type": "text" },
                { "key": "food_safety_declaration", "value": "true", "type": "text" },
                { "key": "payment_method", "value": "upi", "type": "text" },
                { "key": "upi_id", "value": "jane@upi", "type": "text" },
                { "key": "item_types", "value": "[\"cakes\", \"cookies\"]", "type": "text" },
                { "key": "is_veg", "value": "true", "type": "text" },
                { "key": "is_nonveg", "value": "false", "type": "text" },
                { "key": "has_eggless_option", "value": "true", "type": "text" },
                { "key": "terms_accepted", "value": "true", "type": "text" },
                { "key": "profile_photo", "type": "file", "src": [] },
                { "key": "id_proof_document", "type": "file", "src": [] }
              ]
            },
            "url": {
              "raw": "{{base_url}}/baker/profile/complete",
              "host": ["{{base_url}}"],
              "path": ["baker", "profile", "complete"]
            }
          }
        },
        {
          "name": "Check Verification Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{baker_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/baker/verification-status",
              "host": ["{{base_url}}"],
              "path": ["baker", "verification-status"]
            }
          }
        }
      ]
